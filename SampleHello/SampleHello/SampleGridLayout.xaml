<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleHello.SampleGridLayout" Title="Grid Layout">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label FontSize="Medium" Text="First Name :" Grid.Row="0" Grid.Column="0" HorizontalTextAlignment="End" />
            <Entry x:Name="txtFirstName" Placeholder="insert first name" Grid.Row="0" Grid.Column="1" />
            <Label FontSize="Medium" Text="Last Name :" Grid.Row="1" Grid.Column="0" HorizontalTextAlignment="End" />
            
        </Grid>
    </ContentPage.Content>
</ContentPage>